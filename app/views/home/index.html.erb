<%= render :partial => 'form', locals: {:blogs => @blogs, :post_form => @post_form} %>
<% @blogs_list.each do |blog| %>
  <div class="container content blog-list">
      <div class="row">
          <div class="col-md-8 col-md-offset-2 blog-data blog-content">
              <div class="testimonials">
                <div class="item">
                  <p>
                    <div class="title"><b><%=blog.title %></b></div>
                    <div class="blog-time"><b><%=blog.created_at.strftime("%m/%d/%Y") %></b></div>
                    <br><br>
                    <%= raw blog.description %>
                  </p>
                  <div class="carousel-info">
                    <%=image_tag blog.user.image_url, :width => 100, :height => 100, :class => 'pull-left' %>
                    <span class="testimonials-name"><%= blog.user.name %></span>
                    <span class="testimonials-post"><%= blog.user.provider %></span>
                    <span class="pull-right"> <%= link_to 'Destroy', blog_path(blog), data: { confirm: 'Are you sure?' }, method: :delete, class: 'btn btn-danger' %></span>
                    <span class="pull-right"><%= link_to "Edit", edit_blog_path(blog), class: 'btn btn-primary' %></span>
                  </div>
                </div>
              </div>
            </div>
          </div>
      </div>
  </div>
<% end %>
  <hr>
